show databases
use Emp

#CREATE A NEW DATABASE.
CREATE DATABASE EMPLOYEE;
USE EMPLOYEE;

#CREATE A TABLE WITH PRIMARY KEY (BASE TABLE).
CREATE TABLE BRANCH(
B_ID INT PRIMARY KEY,
BRANCH_NAME VARCHAR (20));

#INSERT VALUES IN THE TABLE.
INSERT INTO BRANCH VALUES
(101,"MUMBAI"),
(102,"PUNE"),
(103,"GOA"),
(104,"RATNAGIRI"),
(105,"SATARA");

#CREATE A TABLE WITH FOREIGN KEY TO CONNECT TO BASE TABLE.
CREATE TABLE EMP(
EMP_ID INT PRIMARY KEY,
EMP_NAME VARCHAR (50),
SALARY INT,
B_ID INT,
FOREIGN KEY (B_ID) REFERENCES BRANCH (B_ID));

#INSERTING VALUES SHOULD BE UNIQUE AND NO DUPLICATE IS ALLOWED.
INSERT INTO EMP VALUES
(1,"ANNA",36000,105),
(2,"BANCY",26000,102),
(3,"CASSY",42000,101),
(4,"DANCY",21500,104),
(5,"EMMY",32800,103)

#INNER JOIN 
SELECT * FROM EMP 
INNER JOIN BRANCH 
ON EMP.B_ID = BRANCH.B_ID;

SELECT EMP.EMP_NAME, EMP.SALARY, BRANCH.BRANCH_NAME FROM EMP
INNER JOIN BRANCH ON
EMP.B_ID = BRANCH.B_ID

#RIGHT JOIN (RIGHT OUTER JOIN)
Meaning:
Returns all records from the RIGHT table, and matching records from the LEFT table.
If there is no match, the result will show NULL for left-table columns.





#LEFT JOIN (LEFT OUTER JOIN)
Meaning:
Returns all records from the LEFT table, and matching records from the RIGHT table.
If there is no match, the result will show NULL for right-table columns.




