create database Emp 

use Emp

create table Employee(
Id_No Int Unique,
Emp_Name varchar (50),
Age int check (age>18),
City varchar (20) default 'Mumbai');

----------------------*-----------------------*----------------------------*------------------------

#Correct code.
insert into Employee 
values
(101,"Anna",20,"Goa"),
(102,"Bancy",25,"Kerala"),
(103,"Cassy",35,"Karnataka"),
(104,"Danny",20,"Mumbai")
  
